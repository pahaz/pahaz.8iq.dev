    <noscript>
      <div>
        <img
          src="https://mc.yandex.ru/watch/97239827"
          style="position:absolute; left:-9999px;"
          alt=""
        />
      </div>
    </noscript>

    <!-- Load full theme logic -->
    <script src="../scripts/theme.ts"></script>
  </body>
</html>
